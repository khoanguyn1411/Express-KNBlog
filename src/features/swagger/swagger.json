{
  "openapi": "3.0.0",
  "info": {
    "title": "KNBLOG API",
    "version": "1.0.0",
    "description": "API documentation for my Express application"
  },
  "servers": [
    {
      "url": "http://localhost:8000/",
      "description": "Local server"
    }
  ],
  "tags": [
    { "name": "users" },
    { "name": "auth" },
    { "name": "blogs" },
    { "name": "upload" },
    { "name": "emoticon" }
  ],
  "paths": {
    "/auth/google-login/": {
      "post": {
        "tags": ["auth"],
        "summary": "Login (or register) with Google",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GoogleLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login/": {
      "post": {
        "tags": ["auth"],
        "summary": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register/": {
      "post": {
        "tags": ["auth"],
        "summary": "Register",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout/": {
      "post": {
        "tags": ["auth"],
        "summary": "Logout",
        "responses": {
          "200": {
            "description": "Logout",
            "content": {}
          }
        }
      }
    },
    "/auth/refresh-token/": {
      "post": {
        "tags": ["auth"],
        "summary": "Refresh token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RefreshToken"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          }
        }
      }
    },
    "/users/": {
      "get": {
        "tags": ["users"],
        "summary": "Retrieve a list of users",
        "parameters": [
          {
            "$ref": "#/components/parameters/SearchParam"
          },
          {
            "$ref": "#/components/parameters/LimitParam"
          },
          {
            "$ref": "#/components/parameters/OffsetParam"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of users.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedUser"
                }
              }
            }
          }
        }
      }
    },
    "/users/profile/": {
      "get": {
        "tags": ["users"],
        "summary": "Retrieve user profile",
        "responses": {
          "200": {
            "description": "User",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/{userId}/": {
      "parameters": [
        {
          "name": "blogId",
          "in": "path",
          "required": true,
          "description": "The ID of the blog",
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "tags": ["users"],
        "summary": "Retrieve user detail",
        "responses": {
          "200": {
            "description": "User",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["users"],
        "summary": "Update user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/blogs/": {
      "get": {
        "tags": ["blogs"],
        "summary": "Retrieve a list of blogs",
        "responses": {
          "200": {
            "description": "A list of blogs.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedBlog"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/SearchParam"
          },
          {
            "$ref": "#/components/parameters/LimitParam"
          },
          {
            "$ref": "#/components/parameters/OffsetParam"
          },
          {
            "name": "userId",
            "description": "User ID",
            "schema": { "type": "string" },
            "in": "query"
          }
        ]
      },
      "post": {
        "tags": ["blogs"],
        "summary": "Create blog",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BlogCreate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Blog",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Blog"
                }
              }
            }
          }
        }
      }
    },
    "/blogs/{blogId}/": {
      "get": {
        "tags": ["blogs"],
        "summary": "Retrieve blog detail",
        "parameters": [
          {
            "name": "blogId",
            "in": "path",
            "required": true,
            "description": "The ID of the blog",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Blog",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Blog"
                }
              }
            }
          }
        }
      }
    },
    "/blogs/blogs-have-emoticons/": {
      "get": {
        "tags": ["blogs"],
        "summary": "Retrieve blog IDs which have emoticons",
        "parameters": [
          {
            "name": "blogIds[]",
            "description": "Blog IDs to check",
            "schema": { "type": "string" },
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Blogs have emoticons",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/upload/image/": {
      "post": {
        "tags": ["upload"],
        "summary": "Upload an image",
        "operationId": "uploadFile",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "$ref": "#/components/schemas/FileUpload"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Image uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "downloadUrl": {
                      "type": "string"
                    },
                    "viewUrl": {
                      "type": "string"
                    },
                    "driveViewUrl": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/upload/": {
      "post": {
        "tags": ["upload"],
        "summary": "Upload a file",
        "operationId": "uploadFile",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "$ref": "#/components/schemas/FileUpload"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "downloadUrl": {
                      "type": "string"
                    },
                    "viewUrl": {
                      "type": "string"
                    },
                    "driveViewUrl": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/emoticon/": {
      "post": {
        "tags": ["emoticon"],
        "summary": "Add emoticon to a blog",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["blogId"],
                "properties": {
                  "blogId": {
                    "type": "string",
                    "description": "Blog ID"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/emoticon/{blogId}/": {
      "delete": {
        "tags": ["emoticon"],
        "summary": "Remove emoticon from a blog",
        "parameters": [
          {
            "name": "blogId",
            "in": "path",
            "required": true,
            "description": "The ID of the blog",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "OffsetParam": {
        "name": "offset",
        "in": "query",
        "description": "Page offset",
        "schema": {
          "type": "integer",
          "default": 0
        }
      },
      "LimitParam": {
        "name": "limit",
        "in": "query",
        "description": "Page limit",
        "schema": {
          "type": "integer",
          "default": 10
        }
      },
      "SearchParam": {
        "name": "search",
        "in": "query",
        "description": "Search query",
        "schema": {
          "type": "string",
          "default": ""
        }
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "lastLogin": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["viewer"]
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          },
          "pictureUrl": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "UserUpdate": {
        "type": "object",
        "required": ["pictureUrl", "firstName", "lastName"],
        "properties": {
          "pictureUrl": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          }
        }
      },
      "FileUpload": {
        "type": "object",
        "required": ["file"],
        "properties": {
          "file": {
            "type": "string",
            "format": "binary",
            "description": "The file to upload"
          }
        }
      },
      "Login": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Register": {
        "type": "object",
        "required": ["email", "password", "lastName", "firstName"],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          }
        }
      },
      "GoogleLogin": {
        "type": "object",
        "required": ["googleTokenId", "pictureUrl", "lastName", "firstName", "email"],
        "properties": {
          "googleTokenId": {
            "type": "string"
          },
          "pictureUrl": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "Token": {
        "type": "object",
        "required": ["accessToken", "refreshToken"],
        "properties": {
          "accessToken": {
            "type": "string"
          },
          "refreshToken": {
            "type": "string"
          }
        }
      },
      "RefreshToken": {
        "type": "object",
        "required": ["refreshToken"],
        "properties": {
          "refreshToken": {
            "type": "string"
          }
        }
      },
      "Blog": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "bannerUrl": {
            "type": "string",
            "nullable": true
          },
          "content": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          },
          "emoticonCount": {
            "type": "integer"
          },
          "isUserLiked": {
            "type": "boolean"
          },
          "writtenBy": {
            "$ref": "#/components/schemas/User"
          }
        }
      },
      "BlogCreate": {
        "type": "object",
        "required": ["title", "content", "summary"],
        "properties": {
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "offset": {
            "type": "integer"
          },
          "limit": {
            "type": "integer"
          },
          "count": {
            "type": "integer"
          },
          "hasNext": {
            "type": "boolean"
          },
          "hasPrev": {
            "type": "boolean"
          }
        }
      },
      "PaginatedUser": {
        "allOf": [
          { "$ref": "#/components/schemas/Pagination" },
          {
            "type": "object",
            "properties": {
              "items": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/User"
                },
                "description": "List of User objects"
              }
            }
          }
        ]
      },
      "PaginatedBlog": {
        "allOf": [
          { "$ref": "#/components/schemas/Pagination" },
          {
            "type": "object",
            "properties": {
              "items": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Blog"
                },
                "description": "List of Blog objects"
              }
            }
          }
        ]
      }
    }
  }
}
